                    {{/if}}
                    </div>
                    <div class="form-group">
                        <label for="nombreDeUsuario">Usuario</label>
                        <input type="text" class="form-control" name="nombreDeUsuario" id="nombreDeUsuario" placeholder="Ej: Martín">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                    </div>
                    <div class="row" style="padding-left:15px;padding-bottom:10px;">
                        <a href="/usuario">Registrarme</a>
                    </div>
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </form>
            </div>
        </div>
