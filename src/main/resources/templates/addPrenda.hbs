<div class="card container" style="margin:auto;padding:50px;width:max-content; margin-top: 50px;">
    <div class="col-xs-12">
        <div class="row center-block">
      <form action="" method="POST" style="margin-top: -20px;">
				<div class="" style="margin:40px;">
       				<h3 class="tipoPrendaTitulo"> Agregar prenda </h3>
  				 </div>
  
                
                 <div class="form-group" style="margin-top: 5px;">
                   <input type="text" class="form-control" name="nombrePrenda" id="nombrePrenda" placeholder="Nombre de la prenda">
                </div>
	 
  		  <div class="form-group">
                    <div>
                        <select class="input-select form-control" name="tipoPrenda">
                            <option selected disabled>TipoPrenda</option>
                            {{#each tipoPrendas}}
                                <option value="{{id_tipoPrenda}}" type="tipoPrenda">{{tipo}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

 		 <div class="form-group">
                    <div>
                        <select class="input-select form-control" name="material">
                            <option selected disabled>Material</option>
                            
                                <option value="{{id_membrecia}}" type="material">{{nombreTipoPrenda}}</option>
                           
                        </select>
                    </div>
                </div>
                
                <div class="form-group">
                    <div>
                        <select class="input-select form-control" name="estilo">
                            <option selected disabled>Estilo</option>
                            
                                <option value="{{id_membrecia}}" type="estilo">{{nombreTipoPrenda}}</option>

                        </select>
                    </div>
                </div>
                
 		  <div class="form-group">
                    <div>
                        <select class="input-select form-control" name="coloPrimario">
                            <option selected disabled>Color primario</option>
                            {{#each colores}}
                                <option value="{{this}}" type="colorePrimario">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                
             <div class="form-group">
                    <div>
                        <select class="input-select form-control" name="coloPrimario">
                            <option selected disabled>Color secundario</option>
                            {{#each colores}}
                                <option value="{{this}}" type="colorePrimario">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

		 <div class="form-group">
                    <label for="sexo">Sexo:</label>
                    <div>
                        <select class="input-select form-control" name="sexo" id="sexo">
                            <option selected disabled>Seleccionar</option>
                            <option type="sexo">Femenino</option>
                            <option type="sexo">Masculino</option>
                            <option type="sexo">Unisex</option>    
                        </select>
                    </div>
                </div>
	
		  



		<div class="row" style="margin:10px;margin-top: 10px;">
		 <input type="image" src="../public/img/addIm.png" alt="Submit" width="110" height="110" style="margin-left:30.16%;">
                </div>
		<br>
		<div class="row" style="margin-top:15px;margin-left:10px;">
                    <div class="col">
                        <button type="submit" class="btn btn-danger">Agregar</button>
                    </div>
                    <div class="col">
                       <a href="/home" class="btn btn-outline-dark" style="color:black">Cancelar</a>
                    </div>
                </div>
    		

